{
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.js"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "AskUserQuestion",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/pre-tool-use.js"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit|Bash|Read|Grep|Glob|AskUserQuestion",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/tool-use.js"
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/user-prompt-submit.js"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/stop.js"
                    }
                ]
            }
        ],
        "PermissionRequest": [
            {
                "matcher": "Write|Edit|MultiEdit|Bash|Grep|Glob|Read|Task|WebFetch|WebSearch",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/permission-request.js\"",
                        "timeout": 86400
                    }
                ]
            }
        ]
    }
}
